# research_system/.env.example
# ============================================
# RESEARCH SYSTEM ENVIRONMENT CONFIGURATION
# ============================================

# ============================================
# REQUIRED API KEYS (At least one LLM + one search provider)
# ============================================

# LLM Providers (REQUIRED - at least one)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_ORG_ID=your_organization_id_here

ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Azure OpenAI (Alternative to OpenAI)
AZURE_OPENAI_API_KEY=your_azure_openai_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_PLANNER=gpt-4
AZURE_OPENAI_DEPLOYMENT_RESEARCHER=gpt-4
AZURE_OPENAI_DEPLOYMENT_VERIFIER=gpt-4
AZURE_OPENAI_DEPLOYMENT_WRITER=gpt-4

# Search Providers (REQUIRED - at least one)
TAVILY_API_KEY=your_tavily_api_key_here
SERPER_API_KEY=your_serper_api_key_here
SERPAPI_API_KEY=your_serpapi_api_key_here

# ============================================
# DATABASE & CACHE CONFIGURATION
# ============================================

# PostgreSQL Database
DATABASE_URL=postgresql://user:pass@localhost:5432/research
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0

# Redis Cache
REDIS_URL=redis://localhost:6379
CACHE_TTL_SECONDS=3600
CACHE_MAX_MEMORY_MB=500

# ============================================
# RATE LIMITING & PERFORMANCE
# ============================================

MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_REQUESTS=10
HTTP_TIMEOUT_SECONDS=30
RETRY_MAX_TRIES=5
RETRY_BACKOFF_BASE_SECONDS=0.5

# ============================================
# COST MANAGEMENT
# ============================================

MAX_COST_PER_REQUEST_USD=1.0
MAX_DAILY_COST_USD=100.0
ALERT_COST_THRESHOLD=0.8

# ============================================
# SECURITY & PRIVACY
# ============================================

ENABLE_ENCRYPTION=true
ENABLE_SANITIZATION=true
ENABLE_PRIVACY_PROTECTION=true

# Domain restrictions (comma-separated)
ALLOWED_DOMAINS=.gov,.edu,.ac.uk,.who.int,.un.org
BLOCKED_PATTERNS=malware,phishing,spam

# ============================================
# MONITORING & OBSERVABILITY
# ============================================

PROMETHEUS_ENDPOINT=http://localhost:9090
JAEGER_ENDPOINT=http://localhost:4317
GRAFANA_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Sentry (optional)
SENTRY_DSN=your_sentry_dsn_here

# ============================================
# RESEARCH POLICY & CONSTRAINTS
# ============================================

# Content freshness
FRESHNESS_WINDOW=24 months
REGIONS=US,EU
SOURCE_WHITELIST=["gov","edu","ac.uk","who.int","un.org"]

# ============================================
# ENVIRONMENT & DEPLOYMENT
# ============================================

ENVIRONMENT=development
DEBUG=false

# Output directories
OUTPUT_DIR=outputs
CHECKPOINT_DIR=outputs/checkpoints

# ============================================
# PROXY CONFIGURATION (Optional)
# ============================================

HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1